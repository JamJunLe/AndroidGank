<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    >

    <include layout="@layout/appbar_layout"></include>

    <com.flyman.app.androidgank.wrapper.FixInterceptTouchViewPager
        android:id="@+id/vp_activity_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        ></com.flyman.app.androidgank.wrapper.FixInterceptTouchViewPager>

    <TextView
        android:id="@+id/tv_activity_image_position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/text_padding_large"
        android:text="0/0"
        android:textColor="#ffffff"
        android:textSize="@dimen/text_size_common"
        />

</LinearLayout>
