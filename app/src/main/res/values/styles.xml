<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="CommonActivityStyle" parent="AppTheme.NoActionBar"></style>

    <style name="ImageActivityStyle" parent="AppTheme.NoActionBar">
        <item name="colorPrimaryDark">@color/navigationBarColor</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="overlapAnchor">false</item>  <!--把该属性改为false即可使menu位置位于toolbar之下-->
    </style>

    <!--菜单栏的style-->
    <style name="MenuTextStyle" parent="AppTextTitle"></style>
    <!-- Custom Class Styles -->
    <style name="AppText" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">fonts/web_font.ttf</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>

    <!-- 文章标题字体 -->
    <style name="AppTextTitle" parent="AppText">
        <item name="android:textColor">@color/text_color_title</item>
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>

    <!-- 普通字体 -->
    <style name="AppTextCommon" parent="AppText">
        <item name="android:textColor">@color/text_color_common</item>
        <item name="android:textSize">@dimen/text_size_common</item>
    </style>

    <!--小字体 -->
    <style name="AppTextSmall" parent="AppText">
        <item name="android:textColor">@color/app_text_default_color</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <!--Drawer -->
    <style name="AppTextDrawerSetGank" parent="AppTextCommon">
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/text_padding_large</item>
    </style>

    <!--Drawer -->
    <style name="AppTextDrawerItem" parent="AppTextCommon"></style>

    <!--indeterminateOnly 表示进度条的进度值是否确定。-->
    <!--progressDrawable 我们自定义的文件-->
    <!--indeterminateDrawable 进度条的进度值的风格，定义一写时间之类 的。-->
    <!--minHeight 最小高-->
    <!--maxHeight 最大高-->
    <style name="WebViewProgressBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:minHeight">20dip</item>
        <item name="android:maxHeight">20dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_drawable</item>
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>

    </style>

</resources>
